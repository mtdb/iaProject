/*
 * using utils.js
 */

function Worldmap() {
    this.ground = [];
    this.lenX = function (x,y) {world.ground.length};
    this.lenY = function (x,y) {world.ground[0].length};
    this.generate = function (x,y) {
        for (i=0; i<x; i++){
            row = []
            for (j=0; j<y; j++){
                aux = random(5);
                if (aux == 0 || aux == 1)
                    row[j] = 0;
                else
                    row[j] = aux-1;
            }
            this.ground[i] = row;
        }
    };
    this.populate = function (x) {
        for (i=0; i<this.lenX(); i++){
            for (j=0; j<this.lenY(); j++){
                if (this.ground[i][j] == 0){
                    aux = random(x);
                    if (aux == 0)
                        this.ground[i][j] = 4;
                }
            }
        }
    };
}

function random(x){
    return Math.floor(Math.random()*x);
}
